<div class='deal-header d-flex justify-content-between bg-primary px-2 border-top'>
    <%= render 'items/chatroom', chatroom: @chatroom, user: deal.users.reject { |user| user.id == current_user.id } %>
    <p class='m-0 p-2'><%= deal.created_at.strftime("%Y-%m-%d") %></p>
  </div>
  <%= link_to deal_path(deal), class: 'text-decoration-none', style: 'color: inherit;' do%>
    <div class='d-flex justify-content-around border bg-primary mt-2 p-2'>
      <div>
        <p><%= deal.user_offerer.email %> <strong> ofrece: </strong></p>
        <%= deal.offered_item.name%>
        <% if deal.offered_item.photos.attached? %>
          <%= cl_image_tag deal.offered_item.photos.first.key, class: "d-block w-100 img-fluid", style: "height: 100px; width: 100%;" %>
        <% end %>
      </div>

      <div>
        <div>
          <i id='arrow' class="fa-solid fa-arrow-right-long m-0 p-2"></i>
        </div>
        <div>
          <i id='arrow' class="fa-solid fa-arrow-left-long"></i>
        </div>
      </div>

      <div>
        <p><%= deal.user_requested.email %> <strong> ofrece: </strong></p>
        <%= deal.requested_item.name%>
        <% if deal.requested_item.photos.attached? %>
          <%= cl_image_tag deal.requested_item.photos.first.key, class: "d-block w-100 img-fluid", style: "height: 100px; width: 100%;" %>
        <% end %>
      </div>
    </div>
  <% end %>
