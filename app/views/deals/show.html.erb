<div class="row justify-content-center">
  <div class="col-12 col-sm-7 d-flex bg-background p-0">
    <% if @deal.offered_item.photos.attached? %>
      <%= cl_image_tag @deal.offered_item.photos.first.key, class: "d-block w-100 img-fluid m-0 p-0", style: "height: 250px; width: 100%;" %>
    <% end %>
    <% if @deal.requested_item.photos.attached? %>
      <%= cl_image_tag @deal.requested_item.photos.first.key, class: "d-block w-100 img-fluid m-0 p-0", style: "height: 250px; width: 100%;" %>
    <% end %>
  </div>
  <div class="col-12 col-md-7 bg-background">
    <p class="text-end"><i class="fa-solid fa-location-dot mx-2"></i><%= @deal.user_offerer.address %></p>
    <p class="text-end">Rating de <%= @reviewed_user.email %>: <%= @rating.nil? ? 'Sin reseÃ±as' : @rating %> <i class="fa-solid fa-star"></i></p>
    <div class="bg-pink p-3 m-3">
      <p><%= @deal.user_offerer.email %> ofrece <%= @deal.offered_item.name %></p>
      <p>a cambio de <%= @deal.requested_item.name %> perteneciente a <%= @deal.user_requested.email %></p>
    </div>
    <% if @deal.status == 'accepted' %>
      <div class='d-flex justify-content-around'>
        <div class="d-flex">
          <%= link_to 'Coordinar Entrega', chatroom_path(@deal), class: 'btn btn-info m-0 p-3' %>
        </div>
        <div class="d-flex">
          <%= render 'deals/complete', deal: @deal %>
        </div>
        <div class="d-flex">
          <%= render 'deals/cancel', deal: @deal %>
        </div>
      </div>
    <% elsif @deal.status == 'completed' %>
      <%= render 'deals/review', deal: @deal, review: @review %>
    <% end %>
    <%= render 'deals/show_reviews', reviews: @reviews, reviewed_user: @reviewed_user %>
  </div>
  </div>
